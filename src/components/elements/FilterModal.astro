---
export interface Props {
    id?: string;
    categories?: string[];
}

const { id = "filter-modal", categories = [] } = Astro.props;
---

<dialog class="filter-modal" id={id}>
    <div class="filter-modal-content">
        <div class="filter-modal-header">
            <h3>Filter Products</h3>
            <button class="filter-modal-close" id="filter-modal-close" type="button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </button>
        </div>
        
        <div class="filter-modal-body">
            <div class="filter-section">
                <h4>Categories</h4>
                <div class="filter-tabs">
                    <button class="filter-tab active" data-category="all" type="button">All Products</button>
                    {categories.map((cat) => (
                        <button class="filter-tab" data-category={cat} type="button">{cat}</button>
                    ))}
                </div>
            </div>

            <div class="filter-section">
                <h4>Sort By</h4>
                <select id="sort-filter" class="modern-select">
                    <option value="name">Sort by Name</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="newest">Newest First</option>
                </select>
            </div>

            <div class="filter-section">
                <h4>Price Range</h4>
                <select id="price-filter" class="modern-select">
                    <option value="all">All Prices</option>
                    <option value="0-20">Under 20 RON</option>
                    <option value="20-40">20 - 40 RON</option>
                    <option value="40-60">40 - 60 RON</option>
                    <option value="60+">Over 60 RON</option>
                </select>
            </div>
        </div>

        <div class="filter-modal-footer">
            <button class="filter-clear-btn" id="filter-clear-btn" type="button">Clear All</button>
            <button class="filter-apply-btn" id="filter-apply-btn" type="button">Apply Filters</button>
        </div>
    </div>
</dialog>

<style>
    .filter-modal {
        border: none;
        padding: 0;
        margin: auto;
        background: transparent;
        max-width: 90%;
        width: 600px;
        overflow: hidden;
    }

    .filter-modal::backdrop {
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
    }

    .filter-modal-content {
        background: var(--background);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        animation: modalSlideIn 0.3s ease-out;
    }

    @keyframes modalSlideIn {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .filter-modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 2rem 1rem 2rem;
        border-bottom: 1px solid color-mix(in srgb, var(--button-background) 15%, transparent);
    }

    .filter-modal-header h3 {
        margin: 0;
        font-family: var(--font-heading);
        font-size: 1.5rem;
        color: var(--dark-text);
    }

    .filter-modal-close {
        background: none;
        border: none;
        padding: 0.5rem;
        cursor: pointer;
        color: var(--dark-text);
        border-radius: 8px;
        transition: all 200ms ease;
    }

    .filter-modal-close:hover {
        background: color-mix(in srgb, var(--button-background) 10%, transparent);
    }

    .filter-modal-body {
        padding: 1.5rem 2rem;
    }

    .filter-section {
        margin-bottom: 2rem;
    }

    .filter-section:last-child {
        margin-bottom: 0;
    }

    .filter-section h4 {
        margin: 0 0 1rem 0;
        font-family: var(--font-heading);
        font-size: 1.1rem;
        color: var(--dark-text);
        font-weight: 600;
    }

    .filter-modal-footer {
        display: flex;
        gap: 1rem;
        padding: 1.5rem 2rem 2rem 2rem;
        border-top: 1px solid color-mix(in srgb, var(--button-background) 15%, transparent);
    }

    .filter-clear-btn {
        flex: 1;
        background: transparent;
        border: 2px solid color-mix(in srgb, var(--button-background) 30%, transparent);
        border-radius: 12px;
        padding: 0.875rem 1.5rem;
        font-family: var(--font-body);
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--dark-text);
        cursor: pointer;
        transition: all 200ms ease;
    }

    .filter-clear-btn:hover {
        border-color: var(--button-background);
        background: color-mix(in srgb, var(--button-background) 5%, transparent);
    }

    .filter-apply-btn {
        flex: 1;
        background: var(--button-background);
        border: 2px solid var(--button-background);
        border-radius: 12px;
        padding: 0.875rem 1.5rem;
        font-family: var(--font-body);
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--dark-text);
        cursor: pointer;
        transition: all 200ms ease;
    }

    .filter-apply-btn:hover {
        background: var(--button-background-hover);
        border-color: var(--button-background-hover);
    }

    /* ===== FILTER TABS & FORM ELEMENTS ===== */
    .filter-tabs {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 0.75rem;
    }

    .filter-tab {
        background: transparent;
        border: 2px solid color-mix(in srgb, var(--button-background) 20%, transparent);
        border-radius: 12px;
        padding: 0.875rem 1rem;
        font-family: var(--font-body);
        font-weight: 500;
        font-size: 0.9rem;
        color: var(--dark-text);
        cursor: pointer;
        transition: all 250ms ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        white-space: nowrap;
        text-align: center;
        text-transform: capitalize;
    }

    .filter-tab:hover {
        border-color: var(--button-background);
        background: color-mix(in srgb, var(--button-background) 5%, transparent);
        transform: translateY(-1px);
    }

    .filter-tab.active {
        background: var(--button-background);
        border-color: var(--button-background);
        color: var(--dark-text);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    /* .tab-icon removed (no longer used) */

    .modern-select {
        appearance: none;
        background: var(--element-background);
        border: 2px solid color-mix(in srgb, var(--button-background) 20%, transparent);
        border-radius: 12px;
        padding: 0.875rem 2.5rem 0.875rem 1rem;
        font-family: var(--font-body);
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--dark-text);
        cursor: pointer;
        transition: all 200ms ease;
        width: 100%;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 1rem;
    }

    .modern-select:focus {
        outline: none;
        border-color: var(--button-background);
        box-shadow: 0 0 0 3px color-mix(in srgb, var(--button-background) 15%, transparent);
    }

    .modern-select:hover {
        border-color: var(--button-background-hover);
        background-color: color-mix(in srgb, var(--button-background) 3%, var(--element-background));
    }

    .modern-select option {
        background: var(--element-background);
        color: var(--dark-text);
    }

    @media (max-width: 768px) {
        .filter-modal {
            max-width: 95%;
            max-height: 85vh;
        }

        .filter-modal-header,
        .filter-modal-body,
        .filter-modal-footer {
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }

        /* Filter Tabs */
        .filter-tabs {
            grid-template-columns: 1fr 1fr;
            gap: 0.5rem;
        }

        .filter-tab {
            padding: 0.75rem 0.5rem;
            font-size: 0.85rem;
        }

        .filter-modal-footer {
            flex-direction: column;
        }
    }

    @media (max-width: 480px) {
        .filter-modal {
            max-width: 98%;
            max-height: 90vh;
            margin: 1rem;
        }

        .filter-modal-header {
            padding: 1.5rem 1rem 1rem 1rem;
        }

        .filter-modal-body {
            padding: 1rem;
        }

        .filter-modal-footer {
            padding: 1rem;
        }

        .filter-modal-header h3 {
            font-size: 1.25rem;
        }

        /* Single Column Filter Tabs */
        .filter-tabs {
            grid-template-columns: 1fr;
            gap: 0.75rem;
        }

        .filter-tab {
            padding: 1rem;
            font-size: 0.9rem;
        }

    /* no tab-icon on small screens either */
    }
</style>
