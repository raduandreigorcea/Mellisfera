---
import SocialIcon from "../buttons/SocialIcon.astro";
---

<footer>
    <div class="footer-content">
        <div class="footer-section">
            <h3 class="title-medium">Mellisfera</h3>
            <p class="text-small">
                Crafting pure honey with passion and care since 2014.
            </p>
        </div>

        <div class="footer-section">
            <h4 class="label-normal">Quick Links</h4>
            <ul class="footer-links">
                <li><a href="/" class="text-small">Home</a></li>
                <li><a href="/about" class="text-small">About</a></li>
                <li><a href="/blog" class="text-small">Blog</a></li>
                <li><a href="/shop" class="text-small">Shop</a></li>
            </ul>
        </div>

        <div class="footer-section">
            <h4 class="label-normal">Honey Varieties</h4>
            <ul class="footer-links">
                <li><a href="/shop" class="text-small">Acacia</a></li>
                <li><a href="/shop" class="text-small">Linden</a></li>
                <li><a href="/shop" class="text-small">Polyfloral</a></li>
                <li><a href="/shop" class="text-small">Sunflower</a></li>
            </ul>
        </div>

        <div class="footer-section">
            <h4 class="label-normal">Connect</h4>
            <p class="text-small">
                Follow our beekeeping journey and discover new honey varieties.
            </p>
            <div class="socials">
                <SocialIcon
                    href="https://facebook.com/mellisfera"
                    ariaLabel="Facebook"
                    platform="facebook"
                />
                <SocialIcon
                    href="https://instagram.com/mellisfera"
                    ariaLabel="Instagram"
                    platform="instagram"
                />
                <SocialIcon
                    href="https://tiktok.com/@mellisfera"
                    ariaLabel="TikTok"
                    platform="tiktok"
                />
            </div>

            <p class="label-small contact">hello@mellisfera.com</p>
            <p class="label-small contact">(+40) 123 456 789</p>
        </div>
    </div>

    <div class="footer-bottom">
        <p class="text-small">
            &copy; <span id="current-year"></span> Mellisfera. All rights reserved.
            Made with love by the Grigorita Family.
        </p>
    </div>
</footer>

<script>
    const yearElement = document.getElementById("current-year");
    if (yearElement) {
        yearElement.textContent = String(new Date().getFullYear());
    }
</script>

<style>
    footer {
        background: color-mix(
            in srgb,
            var(--button-background-hover) 5%,
            var(--background)
        );
        border-top: 2px solid var(--button-background);
        margin-top: 4rem;
    }

    .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(1rem, 2vw, 2rem);
    }

    /* Ensure section title and links stay stacked, not side-by-side */
    .footer-section { display: flex; flex-direction: column; align-items: flex-start; }

    .socials { display: flex; gap: .75rem; margin: .75rem 0 1rem; }
    .contact { margin: .25rem 0 0; }

    .footer-section h3,
    .footer-section h4 {
        margin-bottom: 1rem;
        color: var(--button-background-hover);
    }

    .footer-links { list-style: none; padding: 0; display: flex; flex-direction: column; align-items: flex-start; gap: .5rem; }

    .footer-links li { margin: 0; }

    .footer-links a {
        text-decoration: none;
        color: var(--dark-text);
        transition: color 200ms ease;
    }

    .footer-links a:hover {
        color: var(--button-background-hover);
    }

    .footer-links a::after {
        height: 1px;
    }

    .footer-bottom {
        border-top: 1px solid rgba(212, 165, 116, 0.3);
        padding: 1.5rem 2rem;
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    @media (max-width: 768px){
        .footer-content { padding: 2rem 1rem 1.5rem; }
    }
    @media (max-width: 640px){
        /* Two columns on small screens so Quick Links and Honey Varieties sit side-by-side */
        .footer-content { grid-template-columns: 1fr 1fr; text-align: center; }
        /* Brand section (1) spans full width */
        .footer-content .footer-section:nth-child(1) { grid-column: 1 / -1; }
        /* Quick Links (2) auto in column 1, Honey Varieties (3) auto in column 2 */
        /* Connect section (4) spans full width */
        .footer-content .footer-section:nth-child(4) { grid-column: 1 / -1; }

        .footer-section { padding: .25rem 0; align-items: center; }
        .footer-links { align-items: center; text-align: center; }
        .socials { justify-content: center; }
        .footer-bottom { padding: 1rem 1rem; }
    }
</style>
